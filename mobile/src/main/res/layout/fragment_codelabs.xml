<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isEmpty"
            type="Boolean" />

        <variable
            name="activityViewModel"
            type="com.google.samples.apps.iosched.ui.MainActivityViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            style="@style/Widget.AppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:contentInsetStartWithNavigation="?sessionListKeyline"
                app:navigationContentDescription="@string/a11y_show_navigation"
                app:navigationIcon="@drawable/ic_menu"
                app:title="@string/event_codelabs_title">

                <ImageView
                    android:id="@+id/user_avatar"
                    android:layout_width="@dimen/nav_account_image_size"
                    android:layout_height="@dimen/nav_account_image_size"
                    android:layout_gravity="center_vertical|end"
                    android:layout_margin="@dimen/margin_small"
                    android:contentDescription="@null"
                    android:onClick="@{() -> activityViewModel.onProfileClicked()}"
                    app:clipToCircle="@{true}"
                    app:imageUri="@{activityViewModel.currentUserImageUri}"
                    app:placeholder="@{@drawable/ic_default_profile_avatar}"
                    app:signInContentDescription="@{activityViewModel.currentUserInfo}"
                    tools:srcCompat="@drawable/ic_default_profile_avatar" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/codelabs_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingBottom="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_normal"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/item_codelab" />

        <!-- TODO add empty view -->

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
