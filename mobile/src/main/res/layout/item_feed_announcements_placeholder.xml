<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="announcementPlaceholder"
            type="com.google.samples.apps.iosched.ui.feed.AnnouncementsPlaceholder" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:goneUnless="@{announcementPlaceholder.isLoading || announcementPlaceholder.notAvailable}">

        <TextView
            android:id="@+id/feed_empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="@dimen/margin_large"
            android:layout_marginStart="@dimen/margin_large"
            android:drawablePadding="@dimen/spacing_normal"
            android:drawableTop="@drawable/no_items_found_204"
            android:gravity="center"
            android:text="@string/feed_not_available"
            app:goneUnless="@{announcementPlaceholder.notAvailable}" />

        <!-- TODO(b/72711711): Provide a better loading indicator -->
        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            app:goneUnless="@{announcementPlaceholder.isLoading}" />

    </FrameLayout>

</layout>
